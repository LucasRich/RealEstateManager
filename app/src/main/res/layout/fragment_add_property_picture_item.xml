<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="10dp"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/main_fragment_item_cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        android:layout_marginTop="10dp"
        >

    <ImageView
        android:id="@+id/add_property_display_pic"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:layout_below="@+id/add_property_btn_takePicture"
        app:srcCompat="@drawable/ic_picture"
        android:background="@drawable/border"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/add_property_display_picDescription"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_property_fragment_recyclerView"
        android:layout_marginTop="10dp"
        android:text="Salle de bain"
        />

</LinearLayout>