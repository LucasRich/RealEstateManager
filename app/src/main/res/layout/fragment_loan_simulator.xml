<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
    
    <LinearLayout
        android:id="@+id/fragment_loan_simulator_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/fragment_loan_simulator_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/fragment_loan_simulator_display_input"
            android:layout_below="@id/fragment_loan_simulator_seekbar_contribution"
            android:layout_marginTop="30dp"
            />
        
        <include
            android:id="@+id/fragment_loan_simulator_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/fragment_loan_simulator_display_result"
            android:layout_below="@id/fragment_loan_simulator_seekbar_contribution"
            android:layout_marginTop="30dp"

            />

        <Button
            android:id="@+id/fragment_loan_simulator_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:text=""
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:textColor="@android:color/black"
            android:background="@drawable/border_btn"/>

    </LinearLayout>

    </ScrollView>

</RelativeLayout>