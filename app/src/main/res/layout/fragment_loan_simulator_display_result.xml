<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp">

        <RelativeLayout
            android:id="@+id/fragment_loan_simulator_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border">

            <TextView
                android:id="@+id/fragment_loan_simulator_title_loanValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="17dp"
                android:textStyle="bold"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="30dp"
                android:text="Valeur du prêt €"
                />

            <TextView
                android:id="@+id/fragment_loan_simulator_loanValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@android:color/black"
                android:textSize="17dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="30dp"
                android:text="100,000"
                />

            <TextView
                android:id="@+id/fragment_loan_simulator_title_monthlyFees"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fragment_loan_simulator_loanValue"
                android:textColor="@android:color/black"
                android:textSize="17dp"
                android:textStyle="bold"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="30dp"
                android:text="Mensualités €"
                />

            <TextView
                android:id="@+id/fragment_loan_simulator_monthlyFees"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fragment_loan_simulator_loanValue"
                android:layout_alignParentRight="true"
                android:textColor="@android:color/black"
                android:textSize="17dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="30dp"
                android:text="230"
                />

            <TextView
                android:id="@+id/fragment_loan_simulator_title_interest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fragment_loan_simulator_monthlyFees"
                android:textColor="@android:color/black"
                android:textSize="17dp"
                android:textStyle="bold"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="30dp"
                android:text="intérêts €"
                />

            <TextView
                android:id="@+id/fragment_loan_simulator_interest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fragment_loan_simulator_monthlyFees"
                android:layout_alignParentRight="true"
                android:textColor="@android:color/black"
                android:textSize="17dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:layout_marginRight="30dp"
                android:text="900"
                />

        </RelativeLayout>

</RelativeLayout>